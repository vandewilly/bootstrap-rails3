= page_title("Sign in")
.form-box
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %p
      = f.label(:email)
    %p
      = f.email_field(:email)

    %p
      = f.label(:password)
    %p
      = f.password_field(:password)

    - if devise_mapping.rememberable?
      = f.hidden_field(:remember_me, :value => true)

    %p
      = f.submit("Sign in")

  = render(:partial => "devise/shared/links")